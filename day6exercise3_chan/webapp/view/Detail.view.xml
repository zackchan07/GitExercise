<mvc:View controllerName="day6exercise3chan.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
<App id="app">
            <pages>
                <Page id="idDetailsPage" title="{i18n>DetailTitle}" showNavButton="true" navButtonPress="onNavBack" class="sapUiResponsiveContentPadding">
                        <content>
                            <VBox id="idDetailsVbox">
                                <Label id="idInput1Label" text="{i18n>Value1}" labelFor="idInput1"/>
                                <Input id="idInput1" width="20%" editable="false" placeholder="{i18n>InputPlaceholder}" valueStateText="{i18n>ValueStateText}"/>
                                <Label id="idInput2Label" text="{i18n>Value2}" labelFor="idInput1"/>
                                <Input id="idInput2" width="20%" editable="false" placeholder="{i18n>InputPlaceholder}" valueStateText="{i18n>ValueStateText}"/>
                            </VBox>
                        </content>
                </Page>
            </pages>
    </App>

</mvc:View>
