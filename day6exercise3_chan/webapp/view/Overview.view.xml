<mvc:View controllerName="day6exercise3chan.controller.Overview"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
<Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}" class="sapUiResponsiveContentPadding">
                    <content>
                        <VBox id="OverviewBox">
                            <Label id="idInput1Label" text="{i18n>Value1}" labelFor="idInput1"/>
                            <Input id="idInput1" width="20%" required="true" placeholder="{i18n>InputPlaceholder}" valueStateText="{i18n>ValueStateText}" change="onInputChange"/>
                            <Label id="idInput2Label" text="{i18n>Value2}" labelFor="idInput1"/>
                            <Input id="idInput2" width="20%" required="true" placeholder="{i18n>InputPlaceholder}" valueStateText="{i18n>ValueStateText}" change="onInputChange"/>
                        </VBox>
                    </content>
                    <footer>
                        <Toolbar id="idOverviewPageToolbar">
                            <ToolbarSpacer id="idOverviewPageToolbarSpacer"/>
                            <Button id="idButton" icon="sap-icon://arrow-right" tooltip="{i18n>toolTip}" press="onPress"/>
                        </Toolbar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>

</mvc:View>
